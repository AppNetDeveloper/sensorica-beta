    post:
      tags:
        - ProcessFiles
      summary: 'Subir archivo de proceso por token de cliente'
      description: 'Permite subir un archivo (imagen o PDF) asociado a un OriginalOrderProcess validando el token del cliente propietario del pedido.'
      operationId: 1580ad00e1783bd2943b4fb4c43f3523
      parameters:
        -
          name: X-Customer-Token
          in: header
          description: "Token del cliente (alternativa al campo 'token' en el body)"
          required: false
          schema:
            type: string
            example: cust_abcdef123456
      requestBody:
        required: true
        content:
          multipart/form-data:
            schema:
              type: object
              required:
                - token
                - original_order_process_id
                - file
              properties:
                token:
                  type: string
                  description: 'Token único del cliente'
                  example: cust_abcdef123456
                original_order_process_id:
                  type: integer
                  description: 'ID del proceso original al que se asocia el archivo'
                  example: 12345
                file:
                  type: string
                  format: binary
                  description: 'Archivo a subir (jpg, jpeg, png, gif, webp, pdf) máx 10MB'
      responses:
        '201':
          description: 'Archivo subido correctamente'
          content:
            application/json:
              schema:
                properties:
                  success: { type: boolean, example: true }
                  file: { properties: { id: { type: integer, example: 10 }, token: { type: string, example: f5f7a0fb-6b5b-4a7a-9ec6-8c8b1f9a2f0d }, original_name: { type: string, example: Plano_123.pdf }, mime_type: { type: string, example: application/pdf }, size: { type: integer, example: 284233 }, extension: { type: string, example: pdf }, disk: { type: string, example: public }, path: { type: string, example: oop-files/f5f7a0fb-6b5b-4a7a-9ec6-8c8b1f9a2f0d.pdf }, public_url: { type: string, example: /storage/oop-files/f5f7a0fb-6b5b-4a7a-9ec6-8c8b1f9a2f0d.pdf }, created_at: { type: string, format: date-time } }, type: object }
                type: object
        '401':
          description: 'Token inválido'
          content:
            application/json:
              schema:
                properties:
                  success: { type: boolean, example: false }
                  message: { type: string, example: 'Invalid token' }
                type: object
        '403':
          description: 'El proceso no pertenece al cliente'
          content:
            application/json:
              schema:
                properties:
                  success: { type: boolean, example: false }
                  message: { type: string, example: 'Process does not belong to the provided customer' }
                type: object
        '404':
          description: 'Proceso no encontrado'
          content:
            application/json:
              schema:
                properties:
                  success: { type: boolean, example: false }
                  message: { type: string, example: 'Process not found' }
                type: object
        '422':
          description: 'Error de validación / Límite de archivos alcanzado'
          content:
            application/json:
              schema:
                properties:
                  success: { type: boolean, example: false }
                  message: { type: string, example: 'Validation failed' }
                  errors: { type: object }
                type: object
        '500':
          description: 'Fallo en la subida'
          content:
            application/json:
              schema:
                properties:
                  success: { type: boolean, example: false }
                  message: { type: string, example: 'Upload failed' }
                type: object
      security:
        -
          CustomerToken: []
